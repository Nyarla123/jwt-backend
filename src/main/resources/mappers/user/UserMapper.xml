<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.jwt.mapper.UserMapper">

    <select id="findAllUser" parameterType="User" resultType="User" >
        SELECT *
        FROM TEST_MEMBER
        ORDER BY USER_ID
    </select>

    <select id="findByUserName" parameterType="string" resultType="User">
        SELECT *
          FROM TEST_MEMBER
         WHERE USERNAME = #{username}
    </select>

    <insert id="save" parameterType="User">
        INSERT INTO TEST_MEMBER(USER_ID, USERNAME, PASSWORD, ROLE)
        VALUES (TEST_MEMBER_ID_SEQ.nextval, #{username}, #{password}, #{role})
    </insert>

</mapper>